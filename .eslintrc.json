{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "import/no-extraneous-dependencies": "off",
    "no-console": "off",
    "no-restricted-globals": "off",
    "no-underscore-dangle": "off",
    "linebreak-style": ["error", "unix"]
  },
  "ignorePatterns": ["steps_file.js"]
}
